    <div class="background">
        <div class="hero-box">
            <h1>ERY BISTRO</h1>
            <p>Digital hovm√§stare & smakfull demo</p>
        </div>
    </div>

    <div class="chat-toggle" onclick="toggleChat()">üí¨ Prata med hovm√§staren</div>

    <div id="chat-window">
        <div class="chat-header">
            <span>Hovm√§stare Ery AI</span>
            <span onclick="toggleChat()" style="cursor:pointer">‚úï</span>
        </div>
        <div id="msgs">
            <div class="msg ai">V√§lkommen till Ery Bistro. Jag √§r din digitala hovm√§stare. Hur kan jag hj√§lpa dig ikv√§ll?</div>
        </div>
        <div class="chat-input">
            <input type="text" id="userInput" placeholder="Skriv ditt meddelande...">
            <button onclick="send()">S√ÑND</button>
        </div>
    </div>

    <script>
        function toggleChat() {
            const win = document.getElementById('chat-window');
            win.style.display = win.style.display === 'flex' ? 'none' : 'flex';
        }

        async function send() {
            const input = document.getElementById('userInput');
            const box = document.getElementById('msgs');
            const text = input.value.trim();
            if(!text) return;

            // Visa anv√§ndarens meddelande
            const uDiv = document.createElement('div');
            uDiv.className = 'msg user';
            uDiv.textContent = text;
            box.appendChild(uDiv);
            input.value = '';
            box.scrollTop = box.scrollHeight;

            try {
                // Anropa API:et
                const res = await fetch('/api/chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ prompt: text })
                });
                const data = await res.json();
                
                // Visa AI:ns svar
                const aDiv = document.createElement('div');
                aDiv.className = 'msg ai';
                aDiv.textContent = data.text;
                box.appendChild(aDiv);
            } catch (e) {
                const eDiv = document.createElement('div');
                eDiv.className = 'msg ai';
                eDiv.textContent = "Hovm√§staren √§r tillf√§lligt upptagen, v√§nligen f√∂rs√∂k igen.";
                box.appendChild(eDiv);
            }
            box.scrollTop = box.scrollHeight;
        }

        // G√∂r s√• att man kan trycka Enter
        document.getElementById('userInput').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') send();
        });
    </script>
